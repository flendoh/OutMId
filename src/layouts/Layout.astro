---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props{
    title: string;
}
const {title} = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="OutMid es tu herramienta para generar ideas creativas para tus composiciones musicales utilizando tecnología de inteligencia artificial. Ya seas principiante o profesional, nuestra plataforma proporciona inspiración y orientación para mejorar tu proceso de creación musical." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content="Astro" />
		<title>{title}</title>
	</head>
	
	<body>
		<div class="fixed top-0 left-0 z-[-2] h-full w-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px] opacity-90"></div>
		<Header/>
		<slot />
		<Footer/>
	</body>
	
</html>
<style is:global>
    body{
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        font-size: 15px;
		padding: 40px;
        text-align: center;
        max-width: 700px; /* Ajusta este valor según tus necesidades */
        margin: 0 auto; /* Centra el contenedor horizontalmente */
    }
</style>